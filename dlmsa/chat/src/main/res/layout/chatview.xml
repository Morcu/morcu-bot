<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:dots="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ListView
                android:id="@+id/messagesContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/messageEdit"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="alwaysScroll"/>

            <EditText
                android:id="@+id/messageEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/chatSendButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="type message"/>

            <ImageButton
                android:id="@+id/chatSendButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:background="@drawable/drawable_round"
                android:elevation="0dp"
                android:onClick="onSendClick"
                android:src="@drawable/ic_send_white_24dp"
                android:textColor="@color/background_material_light"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:layout_row="0"
                android:clickable="true"
                android:theme="@style/Theme.AppCompat"
                app:backgroundTint="@android:color/holo_red_light"
                app:elevation="0dp"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_btn_speak_now"/>

            <pl.tajchert.waitingdots.DotsTextView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/messageEdit"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/primary_text_light"
                android:textSize="30sp"
                dots:autoplay="false"
                dots:period="1000"/>

            <CheckBox
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/fab"
                android:checked="true"
                android:text="H"
                android:textSize="10sp"
                android:visibility="invisible"
                />

            <CheckBox
                android:id="@+id/rpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/home"
                android:checked="true"
                android:text="A"
                android:textSize="10sp"
                android:visibility="invisible"
                />

            <CheckBox
                android:id="@+id/rpo"
                style="@android:style/Widget.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rpa"
                android:layout_toEndOf="@+id/rpa"
                android:layout_toRightOf="@+id/rpa"
                android:checked="true"
                android:text="O"
                android:textSize="10sp"
                android:visibility="invisible"
                />

            <EditText
                android:id="@+id/sus"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nstbs"
                android:layout_toEndOf="@+id/rpo"
                android:layout_toRightOf="@+id/rpo"
                android:hint="PS-SELEPLI"
                android:selectAllOnFocus="true"
                android:text="PS-SELEPLI"
                android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp"
                android:visibility="invisible"
                />

            <EditText
                android:id="@+id/nstbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/sus"
                android:layout_toRightOf="@+id/sus"
                android:hint="1"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:text="1"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="12sp"
                tools:text="1"
                android:visibility="invisible"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>